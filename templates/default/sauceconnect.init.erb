# Should-Stop:
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6
# Short-Description:    Sauce Connect proxy
# Description:          Sauce Connect proxy

### END INIT INFO

# Source function library.
. <%= node['sauceconnect']['server']['init_functions'] %>

jarfile=${JARFILE-<%= node['sauceconnect']['server']['install_dir'] %>/Sauce-Connect.jar}
logfile=${LOGFILE-<%= node['sauceconnect']['server']['install_dir'] %>/sauce_connect.log}
sauceuser=${SAUCEUSER-root}
apiuser=${APIUSER-bogus}
apikey=${APIKEY-bogus}

[ -r $JARFILE ] || exit 0

start() {
  ulimit -n 10240
  daemon --user $SAUCEUSER "java -jar $jarfile -l $logfile $apiuser $apikey &"
}

stop() {
  # This is rather dirty. But it'll do for now.
  pkill -U $SAUCEUSER java
}

case $1 in
  start)
    echo -n $"Starting Sauce Connect proxy"
    start
    echo
    ;;
  stop)
    echo -n $"Stopping Sauce Connect proxy"
    stop
    echo
    ;;
  restart)
    stop
    sleep 5
    start
    ;;
  *)
    echo $"Usage: $0 {start|stop|restart}"
    RETVAL=1
esac
